<Window x:Class="Aibolit.AddAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить запись на приём" 
        Height="550" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Добавление записи на приём" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>
            
            <TextBlock Text="Фамилия ветеринара:" Margin="0,5"/>
            <ComboBox x:Name="VetSurnameComboBox" Margin="0,5,0,10" IsEditable="True"/>
            
            <TextBlock Text="Имя ветеринара:" Margin="0,5"/>
            <ComboBox x:Name="VetNameComboBox" Margin="0,5,0,10" IsEditable="True"/>
            
            <TextBlock Text="Название услуги:" Margin="0,5"/>
            <ComboBox x:Name="ServiceComboBox" Margin="0,5,0,10" IsEditable="True"/>
            
            <TextBlock Text="Дата (YYYY-MM-DD):" Margin="0,5"/>
            <TextBox x:Name="DateTextBox" Margin="0,5,0,10"/>
            
            <TextBlock Text="Время начала (HH:MM):" Margin="0,5"/>
            <TextBox x:Name="StartTimeTextBox" Margin="0,5,0,10"/>
            
            <TextBlock Text="Время окончания (HH:MM):" Margin="0,5"/>
            <TextBox x:Name="EndTimeTextBox" Margin="0,5,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" 
                       Padding="20,5"
                       Background="#27AE60"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="SaveButton_Click"
                       Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="3" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Отмена" 
                       Padding="20,5"
                       Background="#95A5A6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="3" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>


