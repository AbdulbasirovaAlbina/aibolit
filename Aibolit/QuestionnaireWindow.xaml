<Window x:Class="Aibolit.QuestionnaireWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карта пациента"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F7F9FA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Заполнение карты пациента"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="AppointmentInfoTextBlock"
                       TextWrapping="Wrap"
                       Foreground="#34495E"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Симптомы *" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="SymptomsTextBox"
                     AcceptsReturn="True"
                     Height="120"
                     TextWrapping="Wrap"
                     Margin="0,0,0,15"/>

            <TextBlock Text="Назначение и лечение *" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TreatmentTextBox"
                     AcceptsReturn="True"
                     Height="180"
                     TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Сохранить"
                    Width="140"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SaveButton_Click"/>
            <Button Content="Отмена"
                    Width="140"
                    Padding="15,5"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

