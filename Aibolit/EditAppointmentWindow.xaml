<Window x:Class="Aibolit.EditAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование записи на приём" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование записи" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"
                  Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
            <TextBlock Text="Дата записи *" Margin="0,5"/>
            <DatePicker x:Name="DatePicker" 
                       Width="200" HorizontalAlignment="Left"
                       FontSize="14" Margin="0,5,0,15"/>
            
            <TextBlock Text="Ветеринар *" Margin="0,5"/>
            <ComboBox x:Name="VeterinarianComboBox" Margin="0,5,0,15" IsEditable="True"/>
            
            <TextBlock Text="Название услуги *" Margin="0,5"/>
            <ComboBox x:Name="ServiceComboBox" Margin="0,5,0,15" IsEditable="True"/>
            
            <TextBlock Text="Время начала *" Margin="0,5"/>
            <TextBox x:Name="StartTimeTextBox" 
                    Width="150" HorizontalAlignment="Left"
                    FontSize="14" Margin="0,5,0,15"
                    ToolTip="Формат: HH:MM (например, 09:00)"/>
            
            <TextBlock Text="Время окончания *" Margin="0,5"/>
            <TextBox x:Name="EndTimeTextBox" 
                    Width="150" HorizontalAlignment="Left"
                    FontSize="14" Margin="0,5,0,15"
                    ToolTip="Формат: HH:MM (например, 10:30)"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Удалить" 
                   Padding="20,10"
                   Margin="0,0,10,0"
                   Background="#E74C3C"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="DeleteButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="5" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Сохранить" 
                   Padding="20,10" 
                   Margin="0,0,10,0"
                   Background="#F39C12"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="SaveButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="5" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E67E22"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Отмена" 
                   Padding="20,10"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="5" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

