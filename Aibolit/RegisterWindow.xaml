<Window x:Class="Aibolit.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Border Background="White"
            Margin="20"
            Padding="30"
            CornerRadius="10"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Создание учётной записи"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Foreground="#2C3E50"/>

            <TextBlock Text="Имя пользователя"
                       FontSize="14"
                       Foreground="#34495E"/>
            <TextBox x:Name="UsernameTextBox"
                     Margin="0,5,0,15"
                     Padding="8"
                     FontSize="14"/>

            <TextBlock Text="Пароль"
                       FontSize="14"
                       Foreground="#34495E"/>
            <PasswordBox x:Name="PasswordBox"
                         Margin="0,5,0,15"
                         Padding="8"
                         FontSize="14"/>

            <TextBlock Text="Повторите пароль"
                       FontSize="14"
                       Foreground="#34495E"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Margin="0,5,0,15"
                         Padding="8"
                         FontSize="14"/>

            <TextBlock x:Name="ErrorTextBlock"
                       Foreground="Red"
                       Visibility="Collapsed"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button Content="Создать"
                        Width="120"
                        Margin="0,0,10,0"
                        Padding="10,5"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CreateButton_Click"/>
                <Button Content="Отмена"
                        Width="120"
                        Padding="10,5"
                        Background="#BDC3C7"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

