<Page x:Class="Aibolit.OwnersPetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Владельцы и питомцы">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Заголовок и действия -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Владельцы и питомцы" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"/>
            <Button Content="Добавить владельца и питомца" 
                   Padding="15,5"
                   Background="#27AE60"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="AddOwnerPetButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="3" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Показать все"
                   Padding="15,5"
                   Margin="10,0,0,0"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="ResetFiltersButton_Click"/>
        </StackPanel>

        <!-- Поисковые поля -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Поиск владельца (фамилия, имя, телефон)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="OwnerSearchTextBox"
                         Padding="5"
                         FontSize="14"
                         TextChanged="OwnerSearchTextBox_TextChanged"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Поиск питомца (имя, вид, порода)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="PetSearchTextBox"
                         Padding="5"
                         FontSize="14"
                         TextChanged="PetSearchTextBox_TextChanged"/>
            </StackPanel>
        </Grid>

        <!-- Таблицы -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Владельцы" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid x:Name="OwnersDataGrid"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F8F9FA"
                      SelectionChanged="OwnersDataGrid_SelectionChanged"
                      AutoGeneratingColumn="OwnersDataGrid_AutoGeneratingColumn"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <TextBlock Text="Питомцы" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid x:Name="PetsDataGrid"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F8F9FA"
                      SelectionChanged="PetsDataGrid_SelectionChanged"
                      MouseDoubleClick="PetsDataGrid_MouseDoubleClick"
                      AutoGeneratingColumn="PetsDataGrid_AutoGeneratingColumn"/>
        </StackPanel>
    </Grid>
</Page>


