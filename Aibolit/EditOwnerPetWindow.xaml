<Window x:Class="Aibolit.EditOwnerPetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование владельца и питомца" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование данных" 
                  FontSize="18" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"
                  Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Данные владельца -->
                <GroupBox Header="Данные владельца" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Фамилия *" Margin="0,0,0,5"/>
                        <TextBox x:Name="OwnerSurnameTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Имя *" Margin="0,0,0,5"/>
                        <TextBox x:Name="OwnerNameTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Отчество" Margin="0,0,0,5"/>
                        <TextBox x:Name="OwnerMiddleNameTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Телефон *" Margin="0,0,0,5"/>
                        <TextBox x:Name="OwnerPhoneTextBox" TextChanged="OwnerPhoneTextBox_TextChanged" Margin="0,0,0,10"/>

                        <TextBlock Text="Адрес *" Margin="0,0,0,5"/>
                        <TextBox x:Name="OwnerAddressTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Email" Margin="0,0,0,5"/>
                        <TextBox x:Name="OwnerEmailTextBox" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <!-- Данные питомца -->
                <GroupBox Header="Данные питомца">
                    <StackPanel Margin="10">
                        <TextBlock Text="Имя питомца *" Margin="0,0,0,5"/>
                        <TextBox x:Name="PetNameTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Вид *" Margin="0,0,0,5"/>
                        <TextBox x:Name="PetViewTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Порода *" Margin="0,0,0,5"/>
                        <TextBox x:Name="PetSpeciesTextBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Дата рождения *" Margin="0,0,0,5"/>
                        <DatePicker x:Name="PetBirthDatePicker" Margin="0,0,0,10"/>

                        <TextBlock Text="Цвет *" Margin="0,0,0,5"/>
                        <TextBox x:Name="PetColorTextBox" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" 
                   Padding="20,10" 
                   Margin="0,0,10,0"
                   Background="#27AE60"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="SaveButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="5" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Отмена" 
                   Padding="20,10"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="5" 
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

